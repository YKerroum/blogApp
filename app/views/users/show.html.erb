<%= render @user %>

<div class="bio_container">
    <p> Bio </p>
    <p> <%= @user.bio %> </p>
</div>

<% @user.three_recent_posts.each_with_index do |post, i| %>
  <%= render partial: 'posts/post', locals: { post: post, index: i} %>
<% end %>

<button class="btn"> <%= link_to 'See all posts', user_posts_path(@user) %> </button>

<button type="button" class="btn"><%= link_to "Create a post", new_user_post_path(@user)  %></button>
