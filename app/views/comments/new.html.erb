<div class="form">
  <h1>New Comment</h1>

  <%= form_with model: @comment, url: user_post_comments_path, class: "form" do |form| %>
    <div class="form-items">
      <%= form.text_area :text, class: "form-text", placeholder: "Add new comment..." %>
    </div>
    <div>
      <%= form.submit "Create comment", class: "btn" %>
    </div>
  <% end %>
</div>
