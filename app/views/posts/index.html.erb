<%= render @user %>
<% @user.posts.each_with_index do |post, i| %>
  <div class= "post">
  <%= render partial: 'posts/post', locals: { post: post} %>
  <%= render partial: 'comments/comment', locals: {user_name: @user.name, comments: post.five_recent_comments}%>
  </div>
<% end %>

<button> <%= link_to 'Pagination', user_posts_path(@user) %> </button>
